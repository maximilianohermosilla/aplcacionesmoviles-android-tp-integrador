<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4C6085"
    tools:context=".AuthActivity">

    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/animal_care_logo2"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ciudado de animales"
        android:textSize="25dp"
        android:textColor="#F1F1F1"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/logoImage"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <!-- Expandable Block -->

    <LinearLayout
        android:id="@+id/expandableBlock"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:visibility="visible"
        android:padding="16dp"
        android:background="@drawable/rounded_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.35">

        <TextView
            android:id="@+id/textDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crear una cuenta"
            android:layout_gravity="center"
            android:textSize="25dp"
            android:textColor="#F1F1F1"
            android:visibility="gone"/>

        <!-- Back Button (Initially hidden) -->
        <Button
            android:id="@+id/backButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="start"
            android:background="@drawable/rounded_button2"
            android:text="V"
            android:textSize="20dp"
            android:textColor="@android:color/white"
            android:padding="0dp"
            android:layout_margin="8dp"
            android:gravity="center"
            android:visibility="gone"/>

        <!-- Login Button -->
        <Button
            android:id="@+id/loginButton"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Iniciar Sesi칩n"
            android:background="@drawable/rounded_button"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:padding="20dp"/>

        <!-- Register Button -->
        <Button
            android:id="@+id/registerButton"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Registrarse"
            android:background="@drawable/rounded_button"
            android:layout_gravity="center"
            android:padding="20dp"/>

        <TextView
            android:id="@+id/anonymousBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingresar de forma an칩nima"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:textColor="#F1F1F1"
            android:textSize="20dp"/>


        <!-- Email Input (Initially hidden) -->
        <EditText
            android:id="@+id/emailInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:textColorHint="#F1F1F1"
            android:backgroundTint="@color/textColor"
            android:visibility="gone"
            android:layout_marginTop="16dp"/>

        <!-- Password Input (Initially hidden) -->
        <EditText
            android:id="@+id/passwordInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contrase침a"
            android:textColorHint="#F1F1F1"
            android:backgroundTint="@color/textColor"
            android:inputType="textPassword"
            android:visibility="gone"
            android:layout_marginTop="8dp"/>

        <!-- Confirm Button (Initially hidden) -->
        <Button
            android:id="@+id/signUpButton"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Registrarse"
            android:background="@drawable/rounded_button"
            android:padding="20dp"
            android:layout_gravity="center"
            android:visibility="gone"/>

        <Button
            android:id="@+id/logInButton"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Iniciar sesi칩n"
            android:background="@drawable/rounded_button"
            android:padding="20dp"
            android:layout_gravity="center"
            android:visibility="gone"/>




    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

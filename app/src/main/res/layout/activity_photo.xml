<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/photoActivity"
    android:orientation="vertical"
    android:background="@color/background"
    android:textColor="@color/colorText"
    android:padding="16dp">

    <!-- Contenedor para los botones (horizontal) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginBottom="16dp">  <!-- Separación entre los botones y el contenedor de imágenes -->

        <!-- Botón para abrir la cámara -->
        <Button
            android:id="@+id/openCameraButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Abrir Cámara"
            android:layout_marginEnd="16dp" /> <!-- Margen entre botones -->

        <!-- Botón para abrir la galería -->
        <Button
            android:id="@+id/openGaleryButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Abrir Galeria" />

    </LinearLayout>

    <!-- Contenedor donde se agregarán las fotos -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/imageContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />
    </ScrollView>

</LinearLayout>






<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:textColor="@color/colorText"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/animal_care_logo2" />

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="match_parent"
        android:textColor="@color/colorText"
        android:textColorHint="@color/colorText"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:padding="16dp"
        android:visibility="gone"
        android:text="Nombre" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:id="@+id/nuevaDenunciaButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryButton"
            android:textColor="@color/colorText"
            android:padding="16dp"
            android:drawableStart="@drawable/icon_edit_light"
            android:text="@string/nuevaDenunciaButton"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <Button
            android:id="@+id/denunciasButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryButton"
            android:textColor="@color/colorText"
            android:padding="16dp"
            android:drawableStart="@drawable/icon_list_light"
            android:text="@string/denunciasButton"/>
    </LinearLayout>

    <include
        layout="@layout/bottom_nav_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        />
</LinearLayout>